doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title Created #{myTitle}
        meta(http-equiv='Content-Security-Policy' content="default-src 'none'; img-src " + panelWebviewCspSource + " https:; script-src 'nonce-" + nonce + "'; style-src 'unsafe-inline';")
    body
        table(style='border: 1px solid black;')
            tr
                td #[b Created #{myTitle}]
                td
                td #[b Selected #{myTitle}]
            tr
                td
                    select(id='createdlitems' name='createdlitems' multiple='multiple' size='40' style='min-width: 600px;min-height: 800px;')
                        each item in createdItems
                            option(value=item.path) #{item.name}
                td
                    button(type='button' id='createdAddButton') >
                    br
                    br
                    button(type='button' id='createdRemoveButton') <
                td
                    select(id='createdritems' name='createdritems' multiple='multiple' size='40' style='min-width: 600px;min-height: 800px;')
            tr
                td(colspan='3' align='right')
                    table(id='serverInfo')
                        tr
                            td Source Tanium Server FQDN
                            td 
                                div(id='divCreatedSourceFqdn')
                        tr
                            td Destination Tanium Server FQDN
                            td
                                div(id='divCreatedDestFqdn')
                        tr
                            td Destination Tanium Server Username
                            td
                                div(id='divCreatedUsername')
                        tr
                            td Destination Tanium Server Password
                            td
                                input(id='createdTaniumServerPassword' type='password')
                        tr
                            td Destination Tanium Server Signing Keys
                            td
                                div(id='divCreatedSigningKey')
            tr
                td(colspan='3' align='right' )
                    button(id='processCreatedButton') Process #{myTitle}
        div(id='divFqdns' style='visibility: hidden;') #{fqdns}
        div(id='divUsernames' style='visibility: hidden;') #{usernames}
        div(id='divSigningKeys' style='visibility: hidden;') #{signingKeys}
        div(id='divTransferIndividual' style='visibility: hidden;') #{transferIndividual}
        div(id='divShowServerInfo' style='visibility: hidden;') #{showServerInfo}
        script(nonce="" + nonce + "" src="" + scriptUri + "")
